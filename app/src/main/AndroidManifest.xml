<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Location permissions -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Mock location permission (dangerous permission) -->
    <uses-permission android:name="android.permission.MOCK_LOCATION"
        tools:ignore="MockLocationPermission" />

    <!-- Foreground service permission for continuous location updates -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />

    <!-- Internet for map tiles (optional) -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".FakeLocationApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_foreground"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.FakeLocation"
        tools:targetApi="34">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.FakeLocation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Location spoofing service -->
        <service
            android:name=".location.LocationSpoofingService"
            android:exported="false"
            android:foregroundServiceType="location" />

    </application>

</manifest>
